package exercicioc;
import java.util.Scanner;
public class exercicio {

	public static void main(String[] args) {
    Scanner sc=new Scanner(System.in);
    
    int n = 1;
    int acum = 0;
    
    System.out.println("Os valores pares de 1-500 são: ");
    while (n<=500) {
    	if (n%2==0) {//% o porcento é para dividir o resto
    		acum = acum + n;
    		System.out.println(n);
    	}
    	n++;
    }
    System.out.println("A soma de todos os valores pares é: "+ acum);
}
}
